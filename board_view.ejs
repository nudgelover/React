<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </head>
  <body>
    <%-include('../layout/header.ejs')%>

    <div class="container" style="margin-top: 80px">
      <h2>게시판 상세보기</h2>
      <div class="container mt-3" style="text-align: right">
        <a href="/board/edit/<%=id%>" class="btn btn-secondary"> Edit</a>
        <button type="button" id="btnDelete" class="btn btn-secondary">
          Delete
        </button>
        <a href="/board/<%=id%>" class="btn btn-secondary">BACK</a>
      </div>
      <form name="board">
        <input type="hidden" id="board-id" name="board-id" value="<%=id%>" />
        <table class="table table-hover" style="margin-top: 30px">
          <tbody>
            <tr class="table-secondary">
              <th>제목</th>
              <td colspan="5"><%=item.title%></td>
            </tr>
            <tr>
              <th>작성자</th>
              <td><%=item.writer%></td>
              <th>작성일</th>
              <td><%=item.wdate%></td>
              <th>조회수</th>
              <td><%=item.hit%></td>
            </tr>
            <tr>
              <th colspan="6" class="table-secondary">내용</th>
            </tr>
            <tr>
              <td colspan="6"><%=item.contents%></td>
            </tr>
          </tbody>
        </table>
      </form>
    </div>
    <script>
      window.onload = () => {
        let btnDelete = document.getElementById('btnDelete');
        btnDelete.addEventListener('click', () => {
          document.board.method = 'post';
          document.board.action = '/board/delete';
          document.board.submit();
        });
      };
    </script>
  </body>
</html>
